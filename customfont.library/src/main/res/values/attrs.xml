<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="fontStyle" format="enum">
        <enum name="extralight" value="0"/>
        <enum name="light" value="1"/>
        <enum name="regular" value="2"/>
        <enum name="semibold" value="3"/>
        <enum name="bold" value="4"/>
        <enum name="extrabold" value="5"/>
        <enum name="black" value="6"/>

        <enum name="regular_italic" value="7"/>
        <enum name="light_italic" value="8"/>
        <enum name="bold_italic" value="9"/>
        <enum name="extralight_italic" value="10"/>
        <enum name="semibold_italic" value="11"/>
        <enum name="extrabold_italic" value="12"/>
        <enum name="black_italic" value="13"/>
    </attr>

    <declare-styleable name="CustomFontTextView">
        <attr name="fontStyle"/>
    </declare-styleable>
    <declare-styleable name="CustomFontEditText">
        <attr name="fontStyle"/>
    </declare-styleable>
    <declare-styleable name="CustomFontButton">
        <attr name="fontStyle"/>
    </declare-styleable>
</resources>