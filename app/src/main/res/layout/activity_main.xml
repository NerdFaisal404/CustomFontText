<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.bemind.customfont.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Custom Font"
        android:textSize="20sp"
        android:id="@+id/textView" />

    <me.bemind.customfontlibrary.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Font"
        android:textSize="20sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:fontStyle="regular_italic"
        android:id="@+id/customFontTextView" />

    <me.bemind.customfontlibrary.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Black Font"
        android:textSize="20sp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:fontStyle="black"
        android:id="@+id/customFontTextView2" />


    <me.bemind.customfontlibrary.CustomFontEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Light Italic Font"
        android:textSize="20sp"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:fontStyle="light_italic"
        android:id="@+id/customFontEditText" />

    <me.bemind.customfontlibrary.CustomFontButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customFontEditText"
        android:layout_marginTop="20dp"
        android:text="Custom semibold Button"
        app:fontStyle="semibold"
        android:layout_alignRight="@+id/customFontEditText"
        android:layout_alignEnd="@+id/customFontEditText" />


</RelativeLayout>
